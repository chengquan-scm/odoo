<odoo>
    <record id="view_hr_contract_form_inherit" model="ir.ui.view">
        <field name="name">hr.contract.form.inherit.allowance</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <!-- 在工资字段后面插入所有补贴字段 -->
            <xpath expr="//div[@name='wage']" position="after">
                <field name="x_allowance_wage"/>
                <field name="x_language_allowance"/>
                <field name="x_environment_allowance"/>
                <field name="x_exam_passed"/>
                <field name="insurance_base_wage"/>
                <field name="personal_tax_threshold"/>
            </xpath>
        </field>
    </record>
</odoo>
